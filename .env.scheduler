# Bot Scheduler Configuration
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=3000

# Platform (podman, docker, kubernetes, azure, gcp, cloudflare)
PLATFORM=podman

# Container Engine (auto-detected if not set)
CONTAINER_ENGINE=podman
AUTO_DETECT_ENGINE=true

# Scheduler Settings
SCHEDULER_MAX_CONCURRENT_JOBS=10
SCHEDULER_POLLING_INTERVAL=5000
SCHEDULER_CONTAINER_IMAGE=meet-teams-bot:latest
SCHEDULER_DEFAULT_CPU=1
SCHEDULER_DEFAULT_MEMORY=2Gi

# Recordings Path (for local Podman/Docker)
RECORDINGS_PATH=./recordings

# Kubernetes Configuration
K8S_NAMESPACE=default
# KUBECONFIG=/path/to/kubeconfig

# Azure Configuration
# AZURE_RESOURCE_GROUP=my-resource-group
# AZURE_JOB_NAME=bot-job
# AZURE_LOCATION=eastus

# GCP Configuration
# GCP_PROJECT_ID=my-project
# GCP_REGION=us-central1
# GCP_JOB_NAME=bot-job

# Cloudflare Configuration
# CLOUDFLARE_ACCOUNT_ID=your-account-id
# CLOUDFLARE_API_TOKEN=your-api-token
# CLOUDFLARE_QUEUE_NAME=bot-jobs
